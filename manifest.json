{
  "manifest_version": 2,

  "name": "Gatekeeper",
  "description": "This extension filters Facebook posts that are overly opinionated.",
  "version": "0.1",

  "content_scripts" : [
    {
      "matches" : ["*://*.facebook.com/*"],
      "js" : ["js/jquery-2.1.4.min.js", "js/bundle.js"]
    }
  ],
  "browser_action": {
    "default_icon": "img/gates.jpeg",
    "default_popup": "html/popup.html"
  },
  "permissions": [
    "tabs",
    "https://ajax.googleapis.com/",
    "storage",
    "*://*.facebook.com/*",
    "*://*.twitter.com/*"
  ]
}